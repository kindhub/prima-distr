					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
					img.partners__slider-img(src="images/slider-img.png", alt="")
		<!-- END PARTNERS --> 
		<!-- START VIDEO -->
		.video 
			.container 
				<iframe width="100%" height="350px" src="https://www.youtube.com/embed/byr7BuO6v5A" title="PRIMA Distribution" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		<!-- END VIDEO --> 
		<!-- START FOOTER -->
		.footer 
			.container 
				img.footer-img(src="images/footer-img.jpg", alt="")
